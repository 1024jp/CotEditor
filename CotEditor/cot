import re
import os.path
import sys
from subprocess import Popen, PIPE


# meta data
__version__ = '2.2.0'


# constants
APPLICATION_NAME = 'CotEditor'


def run_osascript(script):
    """Run osascript.

    script -- [str] Osascript.
    """
    p = Popen(['osascript', '-'], stdin=PIPE, stdout=PIPE)
    stdout, stderr = p.communicate(script)

    return stdout.rstrip()


def open_path(path, application):
    """Open given file path in desired application.

    path -- [str] Path to file.
    application -- [str] Name of application to open the file.
    """
    path = path.replace('"', '\\"')
    script = 'tell app "{}" to open POSIX file "{}"'.format(application, path)

    run_osascript(script)


def print_version():
    """Display version to the standard output.
    """
    print("cot {}".format(__version__))


if __name__ == "__main__":
    path = sys.argv[1]
    path = os.path.abspath(path)
    open_path(path, APPLICATION_NAME)
